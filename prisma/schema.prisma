// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User authentication is handled by Clerk
// We store minimal user data and link via Clerk user ID
model User {
  id            String    @id @default(cuid())
  clerkUserId   String    @unique
  email         String?
  hasCompletedOnboarding Boolean @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  accounts      Account[]
  transactions  Transaction[]
  categories    Category[]
  budgets       Budget[]
  savingsGoals  SavingsGoal[]
  imports       Import[]
  apiTokens     ApiToken[]
  recurringIncomes RecurringIncome[]
  recurringTransactions RecurringTransaction[]
  
  @@index([clerkUserId])
}

// Financial accounts (bank, cash, credit cards)
model Account {
  id            String    @id @default(cuid())
  userId        String
  name          String
  type          String    // "bank", "cash", "credit"
  balance       Decimal   @default(0) @db.Decimal(12, 2)
  currency      String    @default("USD")
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions  Transaction[]
  recurringIncomes RecurringIncome[]
  recurringTransactions RecurringTransaction[]
  
  @@index([userId])
  @@index([userId, isActive])
}

// Transactions: income, expense, or transfer
model Transaction {
  id            String    @id @default(cuid())
  userId        String
  accountId     String
  categoryId    String?
  
  type          String    // "income", "expense", "transfer"
  amount        Decimal   @db.Decimal(12, 2)
  description   String
  date          DateTime
  notes         String?
  
  // For transfers
  transferToAccountId String?
  transferToTransactionId String? // Link to the other side of transfer
  
  // Import tracking
  importId      String?
  externalId   String?   // For idempotency (e.g., from Shortcuts)
  idempotencyKey String? @unique
  
  // Recurring transaction tracking
  recurringIncomeId String? // Link to RecurringIncome if created from it (DEPRECATED)
  recurringTransactionId String? // Link to RecurringTransaction if created from it
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  account       Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category      Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  importRecord  Import?   @relation(fields: [importId], references: [id], onDelete: SetNull)
  recurringIncome RecurringIncome? @relation(fields: [recurringIncomeId], references: [id], onDelete: SetNull)
  recurringTransaction RecurringTransaction? @relation(fields: [recurringTransactionId], references: [id], onDelete: SetNull)
  
  @@index([userId, date])
  @@index([recurringIncomeId])
  @@index([recurringTransactionId])
  @@index([userId, accountId, date])
  @@index([userId, categoryId])
  @@index([userId, type, date])
  @@index([idempotencyKey])
  @@index([externalId])
}

// Transaction categories
model Category {
  id            String    @id @default(cuid())
  userId        String?
  name          String
  type          String    // "income", "expense", "both"
  color         String    @default("#3B82F6")
  icon          String?
  isDefault     Boolean   @default(false) // System default categories
  parentId      String?   // For subcategories
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions  Transaction[]
  budgets       Budget[]
  recurringIncomes RecurringIncome[]
  recurringTransactions RecurringTransaction[]
  parent        Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children      Category[] @relation("CategoryHierarchy")
  
  // Auto-categorization rules (stored as JSON)
  autoRules     String?   // JSON: [{ "pattern": "STARBUCKS", "match": "contains" }]
  
  @@index([userId])
  @@index([userId, type])
}

// Monthly budgets per category
model Budget {
  id            String    @id @default(cuid())
  userId        String
  categoryId    String?
  month         Int       // 1-12
  year          Int
  amount        Decimal   @db.Decimal(12, 2)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category      Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  @@unique([userId, categoryId, month, year])
  @@index([userId, year, month])
}

// Savings goals
model SavingsGoal {
  id            String    @id @default(cuid())
  userId        String
  name          String
  icon          String    @default("ðŸŽ¯")
  targetAmount  Decimal   @db.Decimal(12, 2)
  currentAmount Decimal   @default(0) @db.Decimal(12, 2)
  targetDate    DateTime?
  priority      String    @default("medium") // "low", "medium", "high"
  contributionMode String @default("flexible") // "flexible", "fixed"
  fixedMonthlyAmount Decimal? @db.Decimal(12, 2)
  isPaused      Boolean   @default(false)
  isCompleted   Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  contributions GoalContribution[]
  
  @@index([userId])
  @@index([userId, isPaused])
  @@index([userId, isCompleted])
}

// Goal contributions (track individual deposits)
model GoalContribution {
  id            String    @id @default(cuid())
  goalId        String
  amount        Decimal   @db.Decimal(12, 2)
  date          DateTime
  note          String?
  createdAt     DateTime  @default(now())
  
  goal          SavingsGoal @relation(fields: [goalId], references: [id], onDelete: Cascade)
  
  @@index([goalId, date])
}

// Import tracking (Shortcuts, CSV, etc.)
model Import {
  id            String    @id @default(cuid())
  userId        String
  source        String    // "shortcut", "csv", "ofx", "manual"
  status        String    // "pending", "processing", "completed", "failed"
  recordsCount  Int       @default(0)
  successCount  Int       @default(0)
  errorCount    Int       @default(0)
  errors        String?   // JSON array of errors
  metadata      String?   // JSON: source file name, mapping, etc.
  createdAt     DateTime  @default(now())
  completedAt   DateTime?
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions  Transaction[]
  
  @@index([userId, createdAt])
  @@index([userId, status])
}

// API tokens for webhook access (iPhone Shortcuts)
model ApiToken {
  id            String    @id @default(cuid())
  userId        String
  token         String    @unique
  name          String    // User-friendly name
  lastUsedAt    DateTime?
  expiresAt     DateTime?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([token])
  @@index([userId, isActive])
}

// Recurring income (e.g., salary) - DEPRECATED: Use RecurringTransaction instead
model RecurringIncome {
  id            String    @id @default(cuid())
  userId        String
  accountId     String
  categoryId    String?
  amount        Decimal   @db.Decimal(12, 2)
  description   String
  dayOfMonth    Int       // 1-28 (day of month to create transaction)
  isActive      Boolean   @default(true)
  nextRunDate   DateTime
  lastRunDate   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  account       Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category      Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  transactions  Transaction[]
  
  @@index([userId])
  @@index([userId, isActive])
  @@index([nextRunDate])
}

// Recurring transactions (income or expense) - e.g., salary, bills, subscriptions
model RecurringTransaction {
  id            String    @id @default(cuid())
  userId        String
  accountId     String
  categoryId    String?
  type          String    // "income" or "expense"
  amount        Decimal   @db.Decimal(12, 2)
  description   String
  dayOfMonth    Int       // 1-28 (day of month to create transaction)
  isActive      Boolean   @default(true)
  nextRunDate   DateTime
  lastRunDate   DateTime?
  endDate       DateTime? // Optional: stop creating transactions after this date
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  account       Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category      Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  transactions  Transaction[]
  
  @@index([userId])
  @@index([userId, isActive])
  @@index([userId, type])
  @@index([nextRunDate])
  @@index([endDate])
}

// Audit log for important actions
model AuditLog {
  id            String    @id @default(cuid())
  userId        String
  action        String    // "transaction.created", "budget.updated", "import.completed", etc.
  entityType    String?   // "Transaction", "Budget", etc.
  entityId      String?
  metadata      String?   // JSON: additional context
  ipAddress     String?
  userAgent     String?
  createdAt     DateTime  @default(now())
  
  @@index([userId, createdAt])
  @@index([userId, action])
}

